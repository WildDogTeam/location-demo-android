<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list android:layout_height="wrap_content" android:layout_width="match_parent">

            <item
                android:left="1dp"
                android:top="1dp">
                <shape android:shape="rectangle" android:layout_height="wrap_content" android:layout_width="match_parent">
                    <gradient
                        android:angle="270"
                        android:endColor="#0e000000"
                        android:startColor="#1F000000" />

                    <corners android:radius="30dp"/>
                </shape>

            </item>

            <item
                android:bottom="1dp"
                android:right="0dp">
                <shape android:shape="rectangle" android:layout_height="wrap_content" android:layout_width="match_parent">
                    <gradient
                        android:angle="270"
                        android:endColor="#1f000000"
                        android:startColor="#1F000000" />

                    <corners android:radius="30dp"/>
                </shape>

            </item>
            <!-- 背景部分 -->
            <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
            <item
                android:bottom="2dp"
                android:right="0dp">
                <shape android:shape="rectangle" >
                    <gradient
                        android:angle="270"
                        android:endColor="#FFFFFF"
                        android:startColor="#FFFFFF" />
                    <corners android:radius="30dp"/>
                    <solid android:color="#e6501e"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="30dp"/>
            <solid android:color="#f0916e"/>
        </shape>
        </item>
</selector>