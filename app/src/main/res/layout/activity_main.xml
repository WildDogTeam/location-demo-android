<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55ececec"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="#55ececec"
        >

        <ImageView
            android:layout_width="177dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@drawable/top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="17dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:gravity="center_horizontal"
                android:text="AppID"
                android:textColor="#333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_appid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="APPID"
                android:textColor="#333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_switch"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="切换"
                android:textColor="#e6501e"
                android:textSize="17sp" />
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:background="@drawable/main_item_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:src="@drawable/location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="位置同步"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/pathquery"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:background="@drawable/main_item_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:src="@drawable/path" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="实时轨迹"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <LinearLayout
        android:id="@+id/geoquery"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:background="@drawable/main_item_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:src="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="范围监听"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ececec" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_fence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/main_item_bg"
            >
            <ImageView
                android:id="@+id/tag_iv"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:src="@drawable/weilan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="地理围栏"
                android:textColor="#999999"
                android:textSize="15sp"
                android:id="@+id/textView" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="47dp"
            android:layout_height="17dp"
            android:text="开发中"
            android:textSize="12sp"
            android:textColor="#333333"
            android:background="#ececec"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
