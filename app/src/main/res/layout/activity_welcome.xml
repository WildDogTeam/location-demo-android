<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.wilddog.testlocation.WelcomeActivity"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="35dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/welcome"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#333333"
        android:text="野狗通信云"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#333333"
        android:text="实时定位示例程序"/>

    <EditText
        android:id="@+id/et_appid"
        android:layout_marginTop="79dp"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text=""
        android:hint="请输入野狗应用的AppID"
        android:background="@null" />
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@drawable/appid_bg"
        />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_confirm"
        android:layout_width="231dp"
        android:layout_height="40dp"
        android:text="确认"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@drawable/welcome_button_bg"
        />

    <TextView
        android:id="@+id/tv_appid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppID?"
        android:textSize="13sp"
        android:textColor="#e6501e"
        android:padding="5dp"
        />
</LinearLayout>
